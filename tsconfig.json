{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "files": [
    "./src/@types/express/index.d.ts"
  ],
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}